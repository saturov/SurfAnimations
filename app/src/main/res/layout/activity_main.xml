<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.surf.transitions.delayed_transition.MainActivity">

    <Spinner
        android:id="@+id/delayed_transition_animator_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <View
            android:id="@+id/red_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#ff0000" />

        <View
            android:id="@+id/green_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/red_view"
            android:background="#37ff00" />

        <View
            android:id="@+id/blue_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/red_view"
            android:layout_margin="10dp"
            android:background="#0022ff" />

        <View
            android:id="@+id/black_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/green_view"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/blue_view"
            android:background="#000000" />
    </RelativeLayout>
</RelativeLayout>
